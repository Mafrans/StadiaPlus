{
    "compilerOptions": {
        "baseUrl": "./",
        "experimentalDecorators": true,
        "useDefineForClassFields": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es2015",
        "jsx": "react",
        "allowJs": false,
        "moduleResolution": "node",
        "strict": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules", ".*", "modules/main/src/**/*.js", "modules/main/src/**/*.txtjs"]
}